{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block form_row -%}
    {% set classAdd = form.vars.required ? 'required' : '' %}
    {% spaceless %}
        <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %} {{ classAdd }}">
            {% if field_translation is not defined %}
                {{ form_label(form) }}
            {% endif %}

            <div class="{{ block('form_group_class') }}">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{%- endblock form_row %}


{% block form_group_class -%}
    {% if field_translation is not defined %}
        col-sm-10
    {%- else -%}
        col-sm-12
    {%- endif -%}
{%- endblock form_group_class %}

{% block bacon_content_flex_widget %}
    {% spaceless %}
        <select name="bacon_content_flex_group_field" id="bacon_content_flex_group_field" class="select2" data-width="95%">
            {% for group in groupsFields %}
                <option value="{{ group.id }}">{{ group.name }}</option>
            {% endfor %}
        </select>
        <button type="button" class="btn btn-primary" id="bacon_content_flex_add"><span class="glyphicon glyphicon-plus-sign"></span></button>
    {% endspaceless %}
{% endblock bacon_content_flex_widget %}
